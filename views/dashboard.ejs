<h1 class="mt-4">Dashboard</h1>

<p class="lead mb-3">Welcome</p>
<div class=""></div>
<a href="/user/logout" id="logout" class="btn btn-secondary">Logout</a>
<a id="item" class="btn btn-secondary" href="/posts/items">posts</a>
<script>
  let token = "<%- token %>";
  console.log(token);

  JSON.stringify(localStorage.setItem("token", token));

  document.getElementById("logout").addEventListener("click", Logout);
  async function Logout(e) {
    e.preventDefault();
    localStorage.removeItem("token");
    window.location = "/user/login";
  }

  document.getElementById("item").addEventListener("click", sendTok);
  function sendTok(e) {
    e.preventDefault();
    fetch("/posts/items?data=jejejejejejeej", {
      method: "GET",
      headers: {
        Authorization: localStorage.getItem("token"),
        Accept: "application/json",
        "Content-Type": "application/json",
      },
      // body: JSON.stringify({token})
    })
      .then((res) => res.json())
      .then((data) => console.log(data));
  }
</script>
